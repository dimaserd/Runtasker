@helper GetLogoLink()
{

    <a class="logo" href="/Home/Index">
        <span class="glyphicon glyphicon-education"></span><span>RUNTASKER</span>
    </a>
}

@helper GetLogoLinkWithImage(int pixels, bool? padding = null)
{
    if(padding == true)
    {
        <style>
            #runtaskerLogo {
                color: #333;
                text-decoration: none;
                font-size: 35px;
                display: inline-block;
                height: 60px;
                line-height: 50px;
                font-weight: 600;
                letter-spacing: -2px;
                position: absolute;
                top:-6px;
            }
        </style>
        <a id="runtaskerLogo" href="/Home/Index">
            <img height="@pixels" width="@pixels" src="~/assets/logo/logo.png" /><span>RUNTASKER</span>
        </a>
    }
    else
    {
        <a class="logo" href="/Home/Index">
            <img height="@pixels" width="@pixels" src="~/assets/logo/logo.png" /><span>RUNTASKER</span>
        </a>
    }


}

@helper GetLogo()
{
    <span class="glyphicon glyphicon-education hidden-xs"></span>
}

@helper GetLogoWithImage(int pixels)
{
    <img height="@pixels" width="@pixels" class="hidden-xs" src="~/assets/logo/logo.png" />
}

