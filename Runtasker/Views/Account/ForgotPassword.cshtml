@using Runtasker.Resources.Views.Account.ForgotPassword
@using Runtasker.HtmlExtensions
@model Runtasker.Logic.Models.ForgotPasswordModel
@{
    ViewBag.Title = ForgotPassRes.Title;
    bool? emailSent = ViewData["emailSent"] as bool?;
    string disabledBtn = (emailSent != null && emailSent.Value) ? "disabled" : null;
    MvcHtmlString sendBtn = MvcHtmlString.Create($"<button {disabledBtn} class=\"btn btn-primary\">{ForgotPassRes.SendLink}</button>");
}
<!-- PAGE TITLE -->
<header id="page-title">
    <div class="container">
        <h1>@ViewBag.Title</h1>

        <ul class="breadcrumb">
            <li><a href="@Url.Action("Index", "Home")">@ForgotPassRes.HomeNav</a></li>
            <li class="active">@ForgotPassRes.ActiveNav</li>
        </ul>
    </div>
</header>

<!-- PASSWORD -->
<div class="col-md-12">
    <h2>@ForgotPassRes.Header1 <strong>@ForgotPassRes.Header2</strong>?</h2>

    <div class="white-row">
        @if (emailSent != null && emailSent.Value)
        {
            <div class="alert alert-success">
                <i class="fa fa-check-circle"></i>
                <strong>@ForgotPassRes.htmlAlert1</strong> @ForgotPassRes.htmlAlert2
            </div>
        }
        else
        {
            @Html.FirstValidationErrorToAlert()
            <p>
                @ForgotPassRes.Instruction
            </p>
        }

        
        <!-- password form -->
        @Html.LabelFor(m => m.Email);
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "input-group" }))
        {
            @Html.TextBoxFor(m => m.Email, htmlAttributes: new {@class="form-control", placeholder = "E-mail Address" })
            <span class="input-group-btn">
                @sendBtn
            </span>
        }

    </div>

</div>
<!-- /PASSWORD -->

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
