        <section id="socialLoginForm">
            @Html.Partial("NewLoginList", new ExternalLoginListModel { ReturnUrl = ViewBag.ReturnUrl })
        </section>
    </div>*@
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
