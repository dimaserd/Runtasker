@using Runtasker.Logic.Models.AdministrationUsers
@model EditCustomerModel
@{
    ViewBag.Title = "EditUser";
}

<h2>EditUser</h2>

@using (Html.BeginForm())
{
    <div class="table-responsive">
        <table class="table table-bordered table-condensed table-striped">
            <thead>
                <tr>
                    <td>
                        <strong>
                            @Html.DisplayNameFor(x => x.Name)
                        </strong>
                    </td>

                    <td>
                        <strong>
                            @Html.DisplayNameFor(x => x.Email)
                        </strong> 
                    </td>
                    <td>
                        <strong>
                            @Html.DisplayNameFor(x => x.EmailConfirmed)
                        </strong>  
                    </td>
                    <td>
                        <strong>
                            @Html.DisplayNameFor(x => x.ShouldBeNotifictedInVk)
                        </strong>
                    </td>
                    <td>
                        <strong>
                            @Html.DisplayNameFor(x => x.VkDomain)
                        </strong> 
                    </td>
                    <td>
                        <strong>
                            @Html.DisplayNameFor(x => x.VkId)
                        </strong>
                    </td>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td>
                        @Html.TextBoxFor(x => x.Name)
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.Email)
                    </td>
                    <td>
                        @Html.CheckBoxFor(x => x.EmailConfirmed)
                    </td>
                    <td>
                        @Html.CheckBoxFor(x => x.ShouldBeNotifictedInVk)
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.VkDomain)
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.VkId)
                    </td>
                </tr>

                
            </tbody>
        </table>
    </div>

    <button class="btn btn-success" type="submit">
        Сохранить изменеия
    </button>
}
