@using Runtasker.Logic.Entities
@using Runtasker.Logic.Models
@model ActionEmailToCustomer
@{
    ViewBag.Title = "WriteEmail";
    Layout = Runtasker.Statics.Views.ViewPaths.NewAdminLayoutPath;

    ApplicationUser user = ViewData["user"] as ApplicationUser;
}


    <div id="mesBoard" class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="well well-sm">
                <form class="form-horizontal" action="/Performer/WriteEmail" method="post">
                    <fieldset>
                        <legend class="text-center">Написать письмо пользователю @user.Email (@user.Language)</legend>
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <!-- Name input-->
                        <div class="form-group">
                            @Html.Label("Имя получателя", new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                             @Html.TextBoxFor(model => model.Name, htmlAttributes: new {value = Model.Name, disabled = ""})   
                            </div>
                        </div>
                        <!--/Name input-->

                        <!-- Email input-->
                        <div class="form-group">
                            <label class="col-md-3 control-label" for="email">To Email</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.Email, htmlAttributes : new { value = Model.Email, disabled = ""})
                                @Html.HiddenFor(model => model.Email)
                            </div>
                        </div>
                        <!--/Email-->

                        <!--Subject input-->
                        <div class="form-group">
                            @Html.Label("Тема письма", new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.Subject)
                            </div>
                        </div>
                        <!--/Subject input-->

                        <!-- Message body -->
                        <div class="form-group">
                            <label class="col-md-3 control-label" for="message">Сообщение</label>
                            <div class="col-md-9">
                                @Html.TextAreaFor(model => model.Text,
                                    htmlAttributes: new
                                    {
                                        @class = "form-control",
                                        rows = "5",
                                        placeholder = "Введите текст сообщения здесь..."
                                    })
                            </div>
                        </div>
                        <!--/MessageBody-->

                        <!-- Form actions -->
                        <div class="form-group">
                            <div class="col-md-12 text-right">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    Отправить сообщение
                                </button>
                            </div>
                        </div>
                        <!--/Form actions-->
                    </fieldset>
                </form>
            </div>
        </div>
    </div>

<style>
    #mesBoard{
        padding-top : 30px;
    }
</style>