                    </div>

                </div>
            </div>

            <!--<span class="overlay"></span>-->
            @*<div style="background-image: url('~/assets/images/demo/parallax_bg.jpg');" class="fullscreen-img"></div>*@
            <div style="background-image: url('/File/GetFileFromAssets?path=images/demo/RuntaskerParallax/наполнитель.jpg');" class="fullscreen-img"></div>
        </li>

        <!-- Item 2 -->
        <li>
            <div class="image-caption">
                <div class="inner text-center">
                    <!-- text center , text-left or text-right -->
                    @*<div class="block">
                        <h1>RESPONSIVE</h1>
                    </div>*@

                    <div class="block">
                        <h2>БЫСТРО . КАЧЕСТВЕННО . ДОСТУПНО</h2>
                    </div>

                </div>
            </div>

            <!--<span class="overlay"></span>-->
            @*<div style="background-image: url('~/assets/images/demo/parallax_bg.jpg');" class="fullscreen-img"></div>*@
            <div style="background-image: url('/File/GetFileFromAssets?path=images/demo/RuntaskerParallax/diverse_graduates.jpg');" class="fullscreen-img"></div>
        </li>

        <!-- Item 3 -->
        <li>
            <div class="image-caption">
                <div class="inner text-right">
                    <!-- text center , text-left or text-right -->
                    <div class="block">
                        <h2>RESPONSIVE</h2>
                    </div>

                    <div class="block">
                        <h3>Text aligned to right</h3>
                    </div>

                    <div class="block text-left">
                        <h2>Text aligned to left</h2>
                    </div>

                    <div class="block text-left">
                        <p>Align the text by your wish.</p>
                    </div>

                </div>
            </div>

            <!--<span class="overlay"></span>-->
            
            <div style="background-image: url('/File/GetFileFromAssets?path=images/demo/RuntaskerParallax/3-2000x500@2x.jpg');" class="fullscreen-img"></div>
