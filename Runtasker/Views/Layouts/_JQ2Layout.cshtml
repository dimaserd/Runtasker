@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – Runtasker.ru</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" />
    @{ Html.RenderAction("Modal", "Message");}
    @{ Html.RenderAction("Index", "Notification");}

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <!--Brand-->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home", new { area = "" })"><span class="glyphicon glyphicon-education"></span> RUNTASKER</a>
            </div>
            <!--/Brand-->
            <!--Panel-->
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Request.IsAuthenticated)
                    {
                        { Html.RenderAction("ActivePanel", "Message"); }
                        <li><a href="@Url.Action("Index", "Orders")"><span class="glyphicon glyphicon-th-list"> </span> My Orders</a></li>
                    }
                    <li>
                        <a href="@Url.Action("Contact", "Home")">
                            <span class="glyphicon glyphicon-send"></span> Contact
                        </a>
                    </li>
                </ul>
                @{Html.RenderAction("SignIn", "Account"); }
            </div>
            <!--/Panel-->
        </div>
    </div>

    <!--RenderBody-->
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year – RUNTASKER.RU</p>
        </footer>
    </div>
    <!--/RenderBody(2.2.4)-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
