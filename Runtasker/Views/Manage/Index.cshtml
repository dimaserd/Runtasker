@using Runtasker.Resources.Views.Manage.Index
@model Runtasker.Models.IndexViewModel
@{
    ViewBag.Title = IndexRes.Title;
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>@IndexRes.Header</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@IndexRes.Password:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink(IndexRes.ChangePassword, "ChangePassword")
            }
            else
            {
                @Html.ActionLink(IndexRes.SetPassword, "SetPassword")
            }
            ]
        </dd>
        <dt>@IndexRes.ExternalLogins:</dt>
        <dd>
            @Model.Logins.Count [
            @Html.ActionLink(IndexRes.Manage, "ManageLogins") ]
        </dd>
        
        
    </dl>
</div>
