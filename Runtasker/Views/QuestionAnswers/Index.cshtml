@model IEnumerable<Runtasker.Logic.Entities.QuestionAnswer>

@{
    ViewBag.Title = "Index";
}

<h2>Вопросы-Ответы</h2>

<p>
    @Html.ActionLink("[Создать новый]", "Create") |
    @Html.ActionLink("[Вывести]", "Show")
</p>
<table class="table table-bordered table-condensed table-striped">
    <tr>
        <th>Первый вопрос</th>
        <th>Первый ответ</th>
        <th>Действия</th>
    </tr>
    

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Clarifications.FirstOrDefault().Question
        </td>
        <td>
            @item.Clarifications.FirstOrDefault().Answer
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Детали", "Details", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
