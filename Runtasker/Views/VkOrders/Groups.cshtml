@using VkParser.Entities
@using HtmlExtensions.Renderers
@using Extensions.String
@model List<VkGroup>
@{
    ViewBag.Title = "Groups";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
    GlyphiconRenderer GISigns = new GlyphiconRenderer();
}

<h2>Просматриваемые сообщества @GISigns.Count(Model.Count).ToHtml()</h2>

<div class="row">
    <div class="col-md-6">
        <a href="@Url.Action("AddGroup", "VkOrders")" class="btn btn-default">
            Добавить новое
        </a>
        <a href="" class="btn btn-default">
            Еще функция
        </a>
    </div>

    <div class="col-md-6">
        <a href="@Url.Action("Index", "VkOrders")" class="btn btn-default">
            Назад к постам
        </a>
        
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Ссылка в вк
                    </th>
                    <th>
                        Id последнего поста
                    </th>
                    <th>
                        В Группе
                    </th>
                </tr>
            </thead>

            <tbody>

                @foreach (VkGroup group in Model)
                {
                     
                    string vkLink = @"https://vk.com/" +  $"{group.ScreenName}";
                    

                    <tr class="active">
                        <td>
                            <a href="@vkLink">
                                @group.ScreenName
                            </a>
                        </td>
                        <td>
                            @group.LastCheckedPostId
                        </td>
                        <td>
                            @group.IsMember
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>