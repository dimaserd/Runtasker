@using Extensions.String
@using Runtasker.LocaleBuilders.Models
@using Runtasker.Logic.Enumerations.Notifications.Anonymous
@{
    LocaleViewModel localeModel = ViewData["localeModel"] as LocaleViewModel;
    AnonymousNotificationType? notType = ViewData["notType"] as AnonymousNotificationType?;

    ViewBag.Title = localeModel["Title"];
    
}

@AlertHelper.GetAnonymousNotificationAlert(notType)

<div class="jumbotron">
    <h1>@LogoHelper.GetLogoWithImage(100)RUNTASKER.RU</h1>
    <p class="lead">
        @localeModel["Greeting"]
    </p>
    <p>
        <a href="@Url.Action("Create", "Orders")" class="btn btn-primary btn-lg">
            @localeModel["TryOurServicesHtml"].ToHtml()
        </a>
    </p>
</div>

<hr/>


    @{Html.RenderAction("News", "Home");}

