@using Runtasker.Logic.Models
@model ValueOrderModel
@{
    ViewBag.Title = "Оценить заказ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h1>@ViewBag.Title <small></small></h1>
</div>
@using (Html.BeginForm("ValueOrder", "Performer", FormMethod.Post))
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Sum, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Sum, htmlAttributes: new { @clalss = "form-control"})
            </div>
        </div>
    </div>

    @Html.HiddenFor(model => model.OrderId)

    <input class="btn btn-success" type="submit" value="Оценить"/>
}
